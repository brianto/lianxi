<%= form_for @new_user, :html => { :class => "form-horizontal" } do |form| %>
  <fieldset>
    <legend>User</legend>

    <%= render_field form, :username, :text_field, {
      :class => "form-control",
      :placeholder => "username"
    } %>

    <%= render_field form, :email, :email_field, {
      :class => "form-control",
      :placeholder => "you@example.com"
    } %>

    <%= render_field form, :password, :password_field, {
      :class => "form-control",
      :placeholder => "password"
    } %>

    <%= render_field form, :password_confirmation, :password_field, {
      :class => "form-control",
      :placeholder => "password again"
    } %>
  </fieldset>

  <%= form.submit :class => "btn btn-primary" %>
<% end %>
